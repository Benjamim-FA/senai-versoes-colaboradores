@model PetModel
@{
    ViewData["Title"] = "Apagar Pets";
}

<div class="text-center">

    <h2 class="display-4">Tem certeza que deseja apagar o Pet (@Model.Nome)?</h2>

<div>
    <a role="button" class="btn btn-danger" asp-route-id="@Model.Id" asp-controller="Pet" asp-action="Apagar">Confirmar</a>
    <a role="button" class="btn btn-success" asp-controller="Pet" asp-action="Index">Não</a>
</div>
</div>